<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/loginInSecondActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/app_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="25dp"
        android:textColor="@android:color/black"/>
    <EditText
        android:id="@+id/passwordInSecondActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/app_password"
        app:layout_constraintTop_toBottomOf="@+id/loginInSecondActivity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="25dp"
        />
    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_update"
        app:layout_constraintTop_toBottomOf="@+id/passwordInSecondActivity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="25dp"
        android:background="@color/colorBtn"
        android:textColor="@color/colorBac"
        />
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_logout"
        app:layout_constraintTop_toBottomOf="@+id/btnUpdate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="25dp"
        android:background="@color/colorBtn"
        android:textColor="@color/colorBac"
        />

</androidx.constraintlayout.widget.ConstraintLayout>